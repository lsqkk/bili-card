{
    "functions": {
        "api/card.js": {
            "maxDuration": 10,
            "memory": 1024
        }
    },
    "headers": [
        {
            "source": "/api/card",
            "headers": [
                {
                    "key": "Access-Control-Allow-Origin",
                    "value": "*"
                },
                {
                    "key": "Content-Security-Policy",
                    "value": "default-src 'none'; img-src * data:;"
                }
            ]
        }
    ],
    "rewrites": [
        {
            "source": "/card",
            "destination": "/api/card"
        }
    ]
}